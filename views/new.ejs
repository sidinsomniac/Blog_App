<% include partials/header %>
<div class="segment form-segment">
    <h2>New Blog</h2>
	<form action="/blogs" method="POST">
        <label for="blog[title]">Title:</label>
        <input type="text" name="blog[title]" class="form-field" placeholder="Enter Title">
        <label for="blog[image]">Image URL:</label>
        <input type="text" name="blog[image]" class="form-field" placeholder="Enter Image URL">
        <label for="blog[body]">Description:</label>
        <textarea name="blog[body]" class="form-field" cols="60" rows="10"></textarea>
        <input type="submit" class="btn" id="submit-btn">
    </form>
    <a href="/blogs">Back</a>
</div>
<% include partials/footer %>